<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE install>
<install version="1.5" type="plugin" group="kunena" method="upgrade">
	<name>Kunena - CommunityBuilder Integration</name>
	<version>2.0.4</version>
	<creationDate>2013-01-18</creationDate>
	<author>Kunena Team</author>
	<authorEmail>Kunena@kunena.org</authorEmail>
	<authorUrl>http://www.kunena.org</authorUrl>
	<copyright>www.kunena.org</copyright>
	<license>GNU/GPLv3 or later</license>
	<description>PLG_KUNENA_COMPROFILER_DESCRIPTION</description>
	<files>
		<filename plugin="comprofiler">comprofiler.php</filename>
		<folder>comprofiler</folder>
	</files>
	<languages folder="language">
		<language tag="en-GB">en-GB/en-GB.plg_kunena_comprofiler.sys.ini</language>
	</languages>

	<params>
		<param name="access" type="radio" default="1" label="PLG_KUNENA_COMPROFILER_ACCESS" description="PLG_KUNENA_COMPROFILER_ACCESS_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="login" type="radio" default="1" label="PLG_KUNENA_COMPROFILER_LOGIN" description="PLG_KUNENA_COMPROFILER_LOGIN_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="activity" type="radio" default="1" label="PLG_KUNENA_COMPROFILER_ACTIVITY" description="PLG_KUNENA_COMPROFILER_ACTIVITY_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="avatar" type="radio" default="1" label="PLG_KUNENA_COMPROFILER_AVATAR" description="PLG_KUNENA_COMPROFILER_AVATAR_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="profile" type="radio" default="1" label="PLG_KUNENA_COMPROFILER_PROFILE" description="PLG_KUNENA_COMPROFILER_PROFILE_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
		<param name="private" type="radio" default="1" label="PLG_KUNENA_COMPROFILER_PRIVATE" description="PLG_KUNENA_COMPROFILER_PRIVATE_DESC">
			<option value="0">NO</option>
			<option value="1">YES</option>
		</param>
	</params>
</install>
